# =====================
# TRADESTATION PREMIUM - ENVIRONMENT CONFIGURATION
# =====================

# Server Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tradestation?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-2024-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Required for notifications)
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@tradestation.com
SUPPORT_EMAIL=support@tradestation.com

# File Upload Configuration
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Analytics & Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=10

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MS=1800000
SESSION_TIMEOUT_MS=604800000

# PDF Generation
PDF_QUALITY=high
PDF_COMPRESSION=true
LOGO_PATH=assets/tradestation-logo.png

# Third-party Integrations (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false

# SSL Configuration (Production)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt
FORCE_HTTPS=true

# Database Pool Settings
DB_MAX_POOL_SIZE=20
DB_SERVER_SELECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=45000

# Performance Settings
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
STATIC_CACHE_DURATION=86400

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_ORIGIN=https://your-domain.com

# Development Settings (Development only)
ENABLE_DEV_LOGGING=false
ENABLE_HOT_RELOAD=false
MOCK_EMAIL_SERVICE=false

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
ENABLE_WEBHOOKS=false

# API Versioning
API_VERSION=v1
ENABLE_API_DOCS=true

# Notification Settings
SLACK_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Backup Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=tradestation-backups

# CDN Configuration (Optional)
CDN_URL=https://cdn.your-domain.com
ENABLE_CDN=false

# Load Balancer Settings
TRUST_PROXY=true
BEHIND_LOAD_BALANCER=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
ENABLE_DETAILED_HEALTH=true

# Feature Flags
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_HISTORY=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_NOTIFICATIONS=false

# Time Zone
DEFAULT_TIMEZONE=Asia/Jakarta
ENABLE_TIMEZONE_CONVERSION=true

# Localization
DEFAULT_LANGUAGE=id
SUPPORTED_LANGUAGES=id,en

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# Rate Limiting Advanced
ENABLE_DISTRIBUTED_RATE_LIMITING=false
RATE_LIMIT_STORE=memory

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_STORE=memory
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_BASE_URL=/api-docs

# Development Database (Development only)
DEV_MONGODB_URI=mongodb://localhost:27017/tradestation_dev

# Test Database (Testing only)
TEST_MONGODB_URI=mongodb://localhost:27017/tradestation_test

# Clustering
ENABLE_CLUSTERING=false
CLUSTER_WORKERS=auto
