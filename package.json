{
  "name": "tradestation-contract-system",
  "version": "3.0.0",
  "description": "TradeStation - Sistem Kontrak Digital Profesional dengan Tanda Tangan Digital",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "build": "npm run lint && npm run test",
    "deploy": "npm run build && pm2 restart tradestation",
    "logs": "pm2 logs tradestation",
    "monitor": "pm2 monit",
    "docker:build": "docker build -t tradestation .",
    "docker:run": "docker run -p 3000:3000 tradestation",
    "prestart": "npm run migrate",
    "postinstall": "npm run build"
  },
  "keywords": [
    "digital-contract",
    "electronic-signature",
    "tradestation",
    "investment",
    "nodejs",
    "express",
    "mongodb",
    "pdf-generation",
    "contract-management",
    "digital-signature"
  ],
  "author": {
    "name": "TradeStation Development Team",
    "email": "dev@tradestation.com",
    "url": "https://tradestation.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tradestation/contract-system.git"
  },
  "bugs": {
    "url": "https://github.com/tradestation/contract-system/issues"
  },
  "homepage": "https://tradestation.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "pdfkit": "^0.13.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "node-cron": "^3.0.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.7.2",
    "redis": "^4.6.7",
    "bull": "^4.11.3",
    "sharp": "^0.32.4",
    "pdf2pic": "^3.0.1",
    "qrcode": "^1.5.3",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "express-async-errors": "^3.1.1",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.1",
    "archiver": "^5.3.2",
    "mime-types": "^2.1.35",
    "express-fileupload": "^1.4.0",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "speakeasy": "^2.0.0",
    "node-html-pdf": "^0.3.0",
    "puppeteer": "^21.0.3",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.5.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "cross-env": "^7.0.3",
    "@types/node": "^20.4.8",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "mongodb-memory-server": "^8.13.0",
    "faker": "^6.6.6",
    "nyc": "^15.1.0",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "docker-compose": "^0.24.2",
    "pm2": "^5.3.0"
  },
  "optionalDependencies": {
    "sharp": "^0.32.4",
    "canvas": "^2.11.2"
  },
  "peerDependencies": {
    "mongodb": ">=5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pm2": {
    "name": "tradestation",
    "script": "server.js",
    "instances": "max",
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_file": "./logs/combined.log",
    "time": true
  }
}
